<h3 class="text-center">Books for Sale</h3>

<body>
<%= form_tag(books_path, :method => "get", :class => "navbar-form", :id => "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], :class => "span2", :placeholder => "Search Books" %>

      <input type="submit" id="search" value="Search"/>
    </div>
<% end %>

</body>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <% @books.each do |book| %>
      <%= render "book_row", book: book, order_item: @order_item %>
    <% end %>
  </div>
</div>

<br>
<p align = center><%= link_to 'New Book', new_book_path, class:"btn btn-primary"%></p>